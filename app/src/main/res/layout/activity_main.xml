<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <com.example.myapplication.ZoomLayout
            android:layout_centerInParent="true"
            android:id="@+id/child1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:IntervalLineColor="@color/interval_line"
            app:IntervalLineWidth="@dimen/dd10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dd05"
                android:layout_weight="1"
                android:minWidth="@dimen/dd20"
                android:src="@mipmap/ic_icon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="@dimen/dd20"
                android:text="Shall I compare thee to a summer's day?"
                android:textColor="@color/black" />



        </com.example.myapplication.ZoomLayout>


</RelativeLayout>
